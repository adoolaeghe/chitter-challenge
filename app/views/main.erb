<body style= 'text-align: center'>
  <h1> Welcome to Peeper <h1>
    <table align= "center">
    <tr>
      All the Peeps
    </tr>
    <% @peeps.reverse.each do |peep| %>
    <tr>
      <td style="border: 2px solid #dddddd"><%= peep.message %></td>
      <td style="border: 2px solid #dddddd"> peeped at <%= peep.time %> </td>
    </tr>
    <% end %>
  </table>
  <form action ="/add_peep" method="post">
    Add Peep
    <input type="text" name="message">
    <input type="submit" value="Submit">
  </form>
</body>
